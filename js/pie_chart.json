{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": " ",
  "data": {
    "url": "https://raw.githubusercontent.com/Shawn-monash/FIT3179/main/data/zomato_latest_v2.csv"
  },
  "params": [
    {
      "name": "Rating_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 4.8,
        "step": 0.1,
        "name": "Minimum Rating: "
      }
    },
    {
      "name": "City_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Agra",
          "Ahmedabad",
          "Allahabad",
          "Amritsar",
          "Aurangabad",
          "Bangalore",
          "Bhopal",
          "Bhubaneshwar",
          "Chandigarh",
          "Chennai",
          "Coimbatore",
          "Dehradun",
          "Faridabad",
          "Ghaziabad",
          "Goa",
          "Gurgaon",
          "Guwahati",
          "Hyderabad",
          "Indore",
          "Jaipur",
          "Kanpur",
          "Kochi",
          "Kolkata",
          "Lucknow",
          "Luhiana",
          "Mangalore",
          "Mohali",
          "Mumbai",
          "Mysore",
          "Nagpur",
          "Nashik",
          "New Delhi",
          "Noida",
          "Panchkula",
          "Patna",
          "Puducherry",
          "Pune",
          "Ranchi",
          "Secunderabad",
          "Surat",
          "Vadodara",
          "Varanasi",
          "Vizag"
        ],
        "labels": [
          "Show all",
          "Agra",
          "Ahmedabad",
          "Allahabad",
          "Amritsar",
          "Aurangabad",
          "Bangalore",
          "Bhopal",
          "Bhubaneshwar",
          "Chandigarh",
          "Chennai",
          "Coimbatore",
          "Dehradun",
          "Faridabad",
          "Ghaziabad",
          "Goa",
          "Gurgaon",
          "Guwahati",
          "Hyderabad",
          "Indore",
          "Jaipur",
          "Kanpur",
          "Kochi",
          "Kolkata",
          "Lucknow",
          "Luhiana",
          "Mangalore",
          "Mohali",
          "Mumbai",
          "Mysore",
          "Nagpur",
          "Nashik",
          "New Delhi",
          "Noida",
          "Panchkula",
          "Patna",
          "Puducherry",
          "Pune",
          "Ranchi",
          "Secunderabad",
          "Surat",
          "Vadodara",
          "Varanasi",
          "Vizag"
        ],
        "name": "City Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "City_selection == null || datum.City == City_selection"},
    {"filter": "datum.Aggregate_rating > Rating_Above"},
    {
      "joinaggregate": [
        {"op": "count", "field": "Has_Table_booking", "as": "Total"}
      ]
    },
    {
      "joinaggregate": [
        {"op": "count", "field": "Has_Table_booking", "as": "Total_yes"}
      ]
    },
    {"calculate": "datum.Total_yes/datum.Total_yes", "as": "PercentOfTotal"}
  ],
  "hconcat": [
    {
      "title": "Has Table booking?",
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {
          "aggregate": "count",
          "field": "Has_Table_booking",
          "type": "nominal"
        },
        "color": {
          "field": "Has_Table_booking",
          "title": "Results",
          "type": "nominal"
        },
        "tooltip": [
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Restaurants",
            "format": ","
          }
        ]
      },
      "view": {"stroke": null}
    },
    {
      "title": "Has Online delivery?",
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {
          "aggregate": "count",
          "field": "Has_Online_delivery",
          "type": "nominal"
        },
        "color": {
          "field": "Has_Online_delivery",
          "title": "",
          "type": "nominal"
        },
        "tooltip": [
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Restaurants",
            "format": ","
          }
        ]
      },
      "view": {"stroke": null}
    }
  ],
  "config": {}
}